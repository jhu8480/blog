<div class="manage-content-wrapper">
  <button class="goback">Go Back</button>
  <h3>Username: {{userInfo.username}}</h3>
  <h3>User ID: {{userInfo.id}}</h3>
  <h3>Email: {{userInfo.email}}</h3>
  <h4>Blog List</h4>
  <ul class="blog-list">
    {{#each blogArray as |blog|}}
    <li>{{blog.blog_title}} ID:<span class="blog-id">{{blog.id}}</span> <button class="update-blog">Update</button><button class="delete-blog">Delete</button></li>
    {{/each}}
  </ul>
  <h4>Comments List</h4>
  <ul class="comment-list">
    {{#each commentArray as |comment|}}
    <li>Comment Title: {{comment.comment_title}} -- Comment: {{comment.comment_body}} -- Article: {{comment.blog.blog_title}} Comment ID:<span class="comment-id">{{comment.id}}</span> Blog ID:<span class="comment_blog_id">{{comment.blog.id}}</span> <button class="update-comment">Update</button><button class="delete-comment">Delete</button></li>
    {{/each}}
  </ul>
  <script src="/js/manage-content-page.js"></script>
</div>