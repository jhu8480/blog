  <div class="home-wrapper">
    <p class="welcome">Welcome! {{username}}. You are now logged in, your user id is: <span id="userid">{{userId}}</span>.</p>
    <button id="write-new-blog">Write a new article</button>
    <button id="logout-btn">Log out</button>
    <div class="writing-blog hidden">
      <label for="blog_title">Title:</label><br>
      <input type="text" id="blog_title" maxlength="255"><br>
      <label for="blog_body">Write blog:</label><br>
      <textarea id="blog_body" cols="112" rows="15"></textarea><br>
      <button id="post-btn">Post</button>
      <button id="leave-btn">Leave</button>
    </div>
    {{#each blogArray as |blog|}}
      <div class="blog-post-wrapper">
        <h5>{{blog.blog_title}}</h5>
        <h6>Authored by: {{blog.user.username}} User ID: <span id="authorid">{{blog.user.id}}</span></h6>
        <h6>Article ID: <span class="articleid">{{blog.id}}</span></h6>
        <div class="linktoarticle">
          <a href="/blog/{{blog.id}}" target="">Check this article</a>
        </div>
        <h6>Posted at: {{blog.createdAt}}</h6>
        <h6>Last update: {{blog.updatedAt}}</h6>
        <button class="write-a-comment">Write a comment</button>
        <button class="view-comments">View comments</button>
        <div class="comments-wrapper">
          <div class="comment-input-area hidden">
            <label for="comment_title">Comment Title</label><br>
            <input type="text" class="comment_title"><br>
            <label for="article_comment">Comment</label><br>
            <input type="text" class="article_comment"><br>
            <button class="add-comment">Save</button>
            <button class="give-up-comment">Cancel</button>
          </div>
        </div>
        <div class="view-comments-wrapper hidden">
          <div class="comments-list-wrapper"></div>
          <button class="close-view-comments">Close</button>
        </div>
      </div>
    {{/each}}
    <script src="/js/write-blog.js"></script>
    <script src="/js/post-blog.js"></script>
    <script src="/js/comments.js"></script>
    <script src="/js/logout.js"></script>
  </div>